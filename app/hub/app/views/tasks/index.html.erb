               <td><%= make_action_link('account', 'change_password', 80, 80, 'Change<br />password') %></td>
               <td>&nbsp;&nbsp;</td>
               <td><%= make_action_link('account', 'change_details', 80, 80, 'Update<br />details') %></td>
