               <td><%= make_action_link('account', 'login', 80, 80, 'Log in') %></td>
               <td>&nbsp;&nbsp;</td>
               <td><%= make_action_link('account', 'forgot_password', 80, 80, 'Forgotten<br />password?') %></td>
